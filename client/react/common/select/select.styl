.common-select{
  label{
    color inverse
    font-weight 500
    font-size 1.6rem
  }
  &.error{
    select{
      border-color danger !important
    }
  }
  .error-msg{
    font-size 1.1rem
    color danger
    margin-top 6px
  }
  select{
    outline none
    padding 8px 15px
    height auto !important
    font-size 16px
    cursor pointer

    option{
      color #1a1a1a
    }
  }
}