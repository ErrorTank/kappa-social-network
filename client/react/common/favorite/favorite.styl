.favorite{
  display inline-block
  box-shadow rgba(0, 0, 0, 0.05) 4px 4px 16px, rgba(0, 0, 0, 0.05) 0px 0px 1px
  background-color white
  border-radius 24px
  padding 8px 12px


  &.readOnly{
    background-color darken(white, 5%)
    cursor: default;
    padding 6px 10px
    i{
      font-size 2.2rem
    }
    span{
      font-size 1.5rem
    }
  }
  &:not(.readOnly):hover{
    background-color darken(white, 3%)

  }
  &.active{
    background-color primaryButton
    color white
    i{
       color white
    }
    &:not(.readOnly):hover{
      background-color primaryButton
    }
  }
  i{
    font-size 2.5rem
    color danger
  }
  span{
    font-size 1.6rem
    font-weight 500
    margin-left 7px
  }
}