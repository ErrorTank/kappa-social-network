    //     color: btnCancelLight;
    //     // color: blue;
    //   }
    //   .fa-stack-1x{
    //     color: iconColorLight;
    //   }
    // }

    .mn-title{
      width 100%;
      font-size: 15px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      font-weight: 500;
    }
  }  
}