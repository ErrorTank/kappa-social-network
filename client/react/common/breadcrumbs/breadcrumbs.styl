.breadcrumbs-container {
  .breadcrumbs {
    margin-bottom 1.5rem


    display flex
    .breadcrumbs__item {
      font-size 2rem
      color breadcrumbs
      cursor pointer
      transition color 0.1s ease
      &:hover{
        color info

      }
      &:not(:last-child)::after {
        content "\003e"
        font-size 1.5rem
        line-height 1.5rem
        padding 0 0.8rem
      }

      .label {
        font-size 1.5rem

      }
    }
  }
}