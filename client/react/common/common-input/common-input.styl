.common-input {
  font-size 1.3rem
  margin-bottom 1.2rem
  overflow hidden
  &.haveIcon{

    position relative
    border 1px solid common-border
    padding 5px 0 5px 40px !important

    input{
      border none !important
      padding-left 0 !important
    }
    i{
      position absolute
      top 50%
      transform translateY(-50%)
      font-size 2rem
      left 10px
      color commonTextLight
    }
  }
  &.darkMode{
    input
    textarea
    {
      color commonTextDark !important
      &::placeholder{
        color commonTextDark !important
      }
    }

  }
  label{
    color #1a1a1a
    font-weight 500
    font-size 1.4rem
  }

  input
  textarea
  {
    width 100%
    outline none
    font-size 1.4rem
    height auto !important
    padding 6px 12px  !important
    &:disabled{
      pointer-events none
    }
    &:not(.is-invalid):hover{
      border-color primaryButton !important
    }
    &:not(.is-invalid):focus{
      border-color primaryButton !important
      outline none !important
      box-shadow none !important
    }
  }
  .input-wrapper{
    position relative
  }
}
