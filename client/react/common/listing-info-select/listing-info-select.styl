.listing-info-select{
  padding: 16px 16px 0px 16px;
  box-sizing: border-box;
  .listing-info-wrapper{
    cursor pointer
    border-radius: 6px;
    border: 1px solid lightgray;
    width 100%;
    height 58px;
    margin: 0;
    overflow: hidden;
    z-index: 0;
    position relative;
    .listing-info-toggle{
      display: flex
      height: 56px;
      .label-wrapper{
        position relative
        width 90%;
        .listing-info-label{
          position: absolute;
          left: 16px;
          font-size: 16px;
          white-space: nowrap;
          line-height: 20px;
          top: 18px;
          max-width 100%;
          right: 8px;
        }
      }
      
      .toggle-icon{
        width: 10%;
        display: flex;
        
        i{
          align-self center
          font-size: 16px;
          font-weight: 600;
        }
      }
    }

    .select-dropdown {
      position absolute
      top 101%
      left 0
      width 100%
      overflow-y auto
      max-height 200px
      background-color white
      border 1px solid common-border
      color #1a1a1a
      font-size 1.4rem
      z-index 1
    }
  }
}