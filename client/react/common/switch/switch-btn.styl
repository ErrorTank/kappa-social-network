.switch-btn {
  .switch-label{
    font-size 1.6rem
    margin-bottom 0.5rem
    font-weight 500
    color inverse
  }
  label {
    cursor pointer
    padding: 0;

    * {
      vertical-align: middle;
    }

    input {
      display: none;

      & + span {
        position: relative;
        display: inline-block;
        margin-right: 10px;
        width: 56px;
        height: 28px;
        background: #f2f2f2;
        border: 1px solid #eee;
        border-radius: 50px;
        transition: all 0.2s ease-in-out;

        small {
          position: absolute;
          display: block;
          width: 50%;
          height: 100%;
          background: #fff;
          border-radius: 50%;
          transition: all 0.2s ease-in-out;
          left: 0;
        }
      }

      &:checked + span {
        background: info;
        border-color: info;

        small {
          left: 50%;
        }
      }
    }
  }
}