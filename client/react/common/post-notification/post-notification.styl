.post-notification{
  padding 16px
  display flex
  width 350px
  align-items center
  color commonTextLight
  cursor pointer
  .fr-notification{
    .fr-actions{
      margin-top 5px

    }
  }
  &.active{
    background-color rgba(primaryButton, 0.1)
  }
  &:not(.active):hover{
    background-color darken(white, 5%)
  }

  .avatar-wrapper{
    flex 0 0 40px
    position relative
    .reaction{
      position absolute
      bottom -8px
      right -4px
    }

  }
  .pn-file-preview{
    flex 0 0 50px
    max-height 80px
    border-radius 4px

    img{

      width 100%
      height 100%
      object-fit cover
    }
  }
  .content-wrapper{
    padding-left 10px
    flex 0 0 calc(100% - 50px)
    font-size 1.4rem
    &.shorten{
      flex 0 0 calc(100% - 100px)
      padding-right 10px
    }
    .from-now{
      color greyTextLight
      font-weight 500
      font-size 1.3rem
    }
    .content{
      display block
      white-space nowrap
      overflow-x hidden
      text-overflow ellipsis
    }
  }
}