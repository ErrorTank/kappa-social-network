.post-notification{
  padding 16px
  display flex
  width 350px
  align-items center
  color commonTextLight
  cursor pointer
  &.active{
    background-color rgba(primaryButton, 0.1)
  }
  &:not(.active):hover{
    background-color darken(white, 5%)
  }

  .avatar-wrapper{
    flex 0 0 40px
    position relative
    .reaction{
      position absolute
      bottom -8px
      right -4px
    }

  }
  .content-wrapper{
    padding-left 10px
    flex 0 0 calc(100% - 50px)
    font-size 1.4rem
    .from-now{
      color greyTextLight
      font-weight 500
      font-size 1.3rem
    }
    .content{
      display block
      white-space nowrap
      overflow-x hidden
      text-overflow ellipsis
    }
  }
}