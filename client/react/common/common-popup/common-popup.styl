.common-popup{
  z-index 7
  width 100vw
  position fixed
  top 4px
  height 0
  left 0
  overflow hidden
  .common-success-notify{
    height 40px
    line-height 40px
    width 500px
    box-shadow 0px 0px 15px 1px rgba(69, 65, 78, 0.2)
    margin auto
    text-align center
    background-color success
    color white
    border-radius 4px
    font-size 1.5rem
  }
}
.slide-down-enter {
  height: 0;
}
.slide-down-enter-active {
  height: 40px;
  transition: height 500ms;
}
.slide-down-enter-done{
  overflow visible
}
.slide-down-exit {
  height: 40px;
  overflow hidden
}
.slide-down-exit-active {
  height: 0;
  transition: height 500ms;
}