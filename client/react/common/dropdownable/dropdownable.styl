.dropdownable{
  position relative
  display inline-block
  .dropdown {
    position absolute
    top 150%
    right 0
    background-color white

    border-radius 5px
    box-shadow:0px 7px 10px #C2C2C2
    .content-wrapper{
      position relative
      min-width 150px
      .arrow{
        position absolute
        width 15px
        height 15px
        z-index -1
        left 0
        top -7.5px
        transform rotateZ(45deg)
        background-color white
      }
    }
  }
}