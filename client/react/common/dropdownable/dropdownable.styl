.dropdownable {
  position relative
  display inline-block
  &.center{
    .dropdown{
      left 50% !important
      transform translateX(-50%) !important
      right unset !important
      .arrow {

        z-index -1
        left 50% !important
        top -7.5px
        transform rotateZ(45deg) translateX(-50%)
        background-color white
      }
    }
  }
  &.darkMode {
    .dropdown {
      box-shadow: unset
      background-color darkNav

      .arrow {
        background-color darkNav !important
      }
    }
  }

  .dropdown {
    position absolute
    top 150%
    right 0
    z-index 1
    background-color white

    border-radius 5px
    box-shadow:0 7px 25px #c2c2c2

    .content-wrapper {
      position relative
      min-width 150px

      .arrow {
        position absolute
        width 15px
        height 15px
        z-index -1
        left 0
        top -7.5px
        transform rotateZ(45deg)
        background-color white
      }
    }
  }
}