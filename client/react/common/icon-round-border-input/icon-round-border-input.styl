.icon-round-border-input{
  &.darkMode{
    border-left-color common-border-dark
    .irbi-input{
      color commonTextDark
      &::placeholder{
        color darken(commonTextDark, 10%)
      }
      &:not(:focus):hover{
        background-color lightDark !important
      }
    }
    .irbi-icon{

      i{
        color commonTextDark
      }
    }
  }
  padding-left 10px
  border-left 1px solid common-border


  .input-wrapper{
    position relative
    .irbi-icon{
      position absolute
      left 10px
      top 50%
      transform translateY(-50%)
      i{
        font-size 1.8rem
      }
    }
    .irbi-input{
      width 100%
      border-radius 200px
      padding 8px 10px
      font-size 14px
      padding-left 36px
      outline none
      border 1px solid transparent
      transition all 0.1s ease
      background-color transparent
      &:not(:focus):hover{
        background-color darken(white, 5%)
      }
      &:focus{
        border-color primaryButton
      }
    }
  }

}