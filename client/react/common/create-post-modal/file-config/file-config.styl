.file-config{
  white-space nowrap
  .blur-panel{
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    z-index 2
    background-color white
    opacity 0.7
    overflow hidden
    & > div{
      width 100%
      height 100%
      filter: blur(8px);
      position relative
      -webkit-filter blur(8px);
      & > img{
        width 100%
        height 100%
        object-fit cover
        position absolute
        absoluteMiddle()
      }
    }


  }
  .left-panel{
    display inline-block
    vertical-align top
    width 360px
    padding: 16px
    height 100%
    .caption-input{
      label{
        font-size 1.5rem
      }
      textarea{
        height 100px !important
        font-size 1.4rem
      }
    }
  }
  .right-panel{
    display inline-block
    vertical-align top
    width 640px
    height 100%
    .overlay-container{
      width 100%
      height 100%
      position relative
      background-color black
      display flex
      justify-content center
      align-items center
      padding 50px 0
      .image-wrapper{
        margin auto

      }
      .tag-title{
        position absolute
        bottom 15px
        left 50%
        z-index 4
        transform translateX(-50%)
        color white
        font-size 1.5rem
        font-weight 500
      }
    }
  }
}