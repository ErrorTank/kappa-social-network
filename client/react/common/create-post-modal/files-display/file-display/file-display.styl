.fl-file-display {
  background-color white
  border-radius 5px
  box-shadow 0 5px 6px #D1D1D1
  overflow hidden
  margin-bottom 20px
  .media-container {
    height 270px
    overflow hidden
    position relative


    img {

      absoluteMiddle()
      width 100%
      height 100%
      object-fit cover
    }
    &:hover{
      .actions{
        display block
      }

    }
    .actions {
      position absolute
      top 0
      left 0
      width 100%
      display none
      height 100%

      & > div{
        display flex
        justify-content space-between
        padding 8px
      }
    }
  }
}