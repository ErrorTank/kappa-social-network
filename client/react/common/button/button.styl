button
  cursor pointer
  font-size 1.4rem !important
  padding 8px 15px !important
  position relative
  & > i{
    margin-right 5px
  }
  &:disabled{
    cursor none
    pointer-events none
  }
  &.loading{
    pointer-events none
    .loading-inline{
      background-color inherit
      .overlay{
        background-color inherit
        i{
          color white
        }
      }

    }
  }
