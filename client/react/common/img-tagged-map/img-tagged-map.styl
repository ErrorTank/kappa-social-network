.img-tagged-map{
  position relative
  z-index 3
  img {
    width 100%
    height 100%
  }
  .tags-overlay{
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    z-index 3
    .tags-container {
      width 100%
      height 100%
      .tag-box{
        position absolute
        opacity 0
        cursor pointer
        border 2px solid white
        background-color transparent
        z-index 120
        box-shadow: 0px 0px 3px #1C1C1C
        &.active{
          opacity 1
        }
      }


      position relative
      .tag-label{
        position absolute
        z-index 20
        &:hover{
          z-index 50 !important
        }
        .label-container{
          position relative
          .label{
            background-color white
            border-radius 5px
            font-size 1.5rem
            font-weight 500
            position absolute

            left 50%
            transform translateX(-50%)
            padding 8px
            box-shadow: 0px 1px 2px #A6A6A6;



          }
          .arrow{
            position absolute
            width 15px
            height 15px

            left 50%

            transform rotateZ(45deg) translateX(-50%)
            background-color white
          }
        }
      }

    }
  }
}