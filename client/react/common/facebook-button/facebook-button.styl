.facebook-button {
  margin-right: 8px;
  height: 36px;
  padding: 0 16px;
  border-radius: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 15px;
  font-weight: 600;
  text-align: center;

  &:disabled, &[disabled] {
    cursor: not-allowed;
    background-color: btnCancelLight;
    pointer-events: auto;
    border: 0;
    filter: grayscale(100%) contrast(30%) brightness(150%);
  }

  i {
    font-size: 16px;
    margin: 0 3px;
  }

  span {
    margin: 0 3px;
    max-width: 100%;
  }
}