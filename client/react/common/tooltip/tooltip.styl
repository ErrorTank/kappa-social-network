.tooltip-container {
  position relative
  display inline-block
  &.darkMode {
    .tooltip-content {
      color commonTextLight !important
      background-color commonTextDark !important
    }
  }
  .tool-tip {
    position absolute


    z-index 2
    &.top {
      bottom 100%
      left 60%
      transform translateX(-50%)


      .tooltip-content {
        margin-bottom 5px

      }
    }
    &.bottom {
      top 100%
      left 50%
      transform translateX(-50%)


      .tooltip-content {
        margin-top 5px

      }
    }

    &.bottom-left {
      top 100%
      right 0


      .tooltip-content {
        margin-top 0px

      }
    }

    &.left {
      top 50%
      transform translateY(-50%)
      right 100%


      .tooltip-content {
        margin-right 5px

      }
    }

    .tooltip-content {
      transition background-color 300ms ease
      background-color commonTextLight
      color white
      font-size 13px
      padding 5px 20px
      white-space nowrap
      text-align center
      max-width 200px
      border-radius 4px
    }
  }
}