.modals{
  .slideIn-enter {
    background rgba(0, 0, 0, 0.0)

    .modal-overlay {
      .modal-content {
        transform: translate(0, -50%);
      }
    }
  }
  .slideIn-enter-done {
    background rgba(0, 0, 0, 0.5)
  }
  .slideIn-enter-active {
    background rgba(0, 0, 0, 0.5)
    transition: background .3s ease-out;

    .modal-overlay {
      .modal-content {
        transform: translate(0, 0);
        transition: transform .3s ease-out,-webkit-transform .3s ease-out;
      }
    }
  }

  .slideIn-exit {
    background rgba(0, 0, 0, 0.5)

    .modal-overlay {
      .modal-content {
        transform: translate(0, 0);
      }
    }
  }

  .slideIn-exit-active {
    background rgba(0, 0, 0, 0.0)
    transition: background .3s ease-out;

    .modal-overlay {
      opacity: 0;
      transition: opacity .3s ease-in;

      .modal-content {
        transition: transform .3s ease-out,-webkit-transform .3s ease-out;
        transform: translate(0, -80%);
      }
    }
  }
}

.k-modal{
  .alert-modal
  .confirm-modal{
    &.danger-modal{
      .modal-title{
        color danger
      }
    }
  }
  display block
  color inverse
  background-color rgba(black, 0.7)
  //.modal-overlay{
  //  max-width 1200px !important
  //}
  text-align center

  .modal-overlay{
    display inline-block
    margin-top 70px
  }

  .modal-header{
    padding 15px 20px !important

    .close-modal{
      font-size 18px
      color lighten(#3f4047, 30%)
      cursor pointer
      &:hover{
        color #3f4047
      }
    }
    .modal-title{
      color inverse
      font-size 25px !important
      font-weight 550 !important
    }
  }
  .modal-footer{
    padding 15px 20px !important
    button{
      font-size 16px !important
      padding 7px 25px !important
      &.btn-confirm{
        position relative
        background-color info !important
        color white !important
      }
    }
  }
  .modal-body{
    color #3f4047
    font-size 16px
    padding 15px 20px !important
    text-align left
  }
}

