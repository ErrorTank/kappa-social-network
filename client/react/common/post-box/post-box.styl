.post-box{
  margin-top 20px
  .post-body{
    .hyperlink{
      .url-image{
        height 180px !important
      }
    }
    .pb-list{
      position relative
      //border-radius 5px
      overflow hidden
      border 1px solid common-border

      .file-preview {
        position relative
        display inline-block
        overflow hidden
        float left
        .count-overlay{
          width 100%
          height 100%
          z-index 2
          absoluteMiddle()
          background-color rgba(black, 0.4)
          display flex
          align-items center
          justify-content center
          span{
            color white
            font-size 3rem
            font-weight 700
          }
        }
        img {
          absoluteMiddle()
          width 100%
          height 100%
          object-fit cover
        }
      }

      &.list-1 {
        .pic-1 {
          width 100%
          height 250px
        }
      }

      &.list-2 {
        .pic-1 {
          width 100%
          height 235px
        }

        .pic-2 {
          width 100%
          height 235px
        }
      }

      &.list-3 {
        .pic-1 {
          width 100%
          height 235px
        }

        .pic-2 {
          width 50%
          height 150px
        }

        .pic-3 {
          width 50%
          height 150px
        }
      }

      &.list-4 {
        .pic-1 {
          width 100%
          height 235px
        }

        .pic-2 {
          width 33.33%
          height 150px
        }

        .pic-3 {
          width 33.33%
          height 150px
        }

        .pic-4 {
          width 33.33%
          height 150px
        }
      }

      &.list-5 {
        .pic-1 {
          width 50%
          height 235px
        }

        .pic-2 {
          width 50%
          height 235px
        }

        .pic-3 {
          width 33.33%
          height 150px
        }

        .pic-4 {
          width 33.33%
          height 150px
        }

        .pic-5 {
          width 33.33%
          height 150px
        }
      }
    }
    .content{
      white-space pre-wrap
      padding 8px 16px
      font-size 1.5rem
      & > span{
        display inline-block
        vertical-align middle
      }
    }
  }
  .post-header{
    display flex
    padding 12px 15px
    align-items center
    .avatar-wrapper{
      flex 0 0 50px
    }
    .post-actions{
      flex 0 0 40px
      .post-actions-dropdown{
        padding 8px
        width 250px
        .setting-row{
          padding 8px
          display flex
          align-items center
          cursor pointer
          &:hover{
            background-color darken(white, 5%)

          }

          .label{
            font-size 1.4rem
            white-space nowrap
            font-weight 500
            padding-left 12px
            flex 0 0 calc(100% - 25px)
          }
          .icon-wrapper{
            position relative
            flex 0 0 25px
            i{
              font-size 1.8rem
              position absolute
              absoluteMiddle()
            }
          }
          i{
            font-size 2rem

          }
        }
      }
      .post-actions-toggle{
        position relative
        width 30px
        height 30px
        border-radius 50%
        cursor pointer
        &:hover{
          background-color darken(white, 5%)
        }
        i{
          absoluteMiddle()
          font-size 2rem !important
          color commonTextLight
        }
      }
    }
    .post-meta-data{
      flex  0 0 calc(100% - 80px)
      .timer{
        display flex
        align-items center
        .last-active{
          color greyTextLight
          font-size 1.3rem
          font-weight 500
          margin-left 0.5rem
        }
        .policy{
          margin-right 0.5rem
          i{
            color greyTextLight
            font-size 1.5rem
          }
        }
      }
      .upper{
        color greyTextLight
        font-size 1.5rem
        .link{
          font-weight 500
          color commonTextLight
        }
        white-space pre-wrap
      }
    }
  }

}