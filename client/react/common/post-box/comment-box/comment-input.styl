.comment-input {
  position relative
  .comment-media-wrapper{
    display flex
    align-items center
    flex-wrap wrap
    padding 8px 0
    .comment-media{
      flex 0 0 80px
      .remove-icon{
        position absolute
        top 5px
        right 5px
        font-size 1.6rem
        cursor pointer
        color greyTextLight
      }
      height 80px
      border 1px solid common-border
      margin-right 7px
      position relative
      border-radius 5px
      overflow: hidden;
      img{
        width 100%
        height 100%
        absoluteMiddle()
        object-fit cover
      }
    }
  }
  .wrapper {
    display flex
    align-items center

    .avatar-wrapper {
      flex 0 0 40px

      .common-avatar {
        width 34px
        height 34px

        .avatar-holder {
          span {
            font-size 1.4rem
          }
        }
      }
    }

    .input-wrapper {
      flex 0 0 calc(100% - 40px)
      position relative


      .comment-input-actions {
        position absolute !important
        top 50%
        transform translateY(-50%)
        right 8px
        z-index 3
        .send-btn{
          color primaryButton
        }
        .actions-wrapper{
          display flex
          align-items center
          position relative
          .emoji-picker{
            position absolute
            top 100%
            left 50%
            transform translateX(-50%)

          }
          i{
            font-size 1.8rem
            cursor pointer
            margin-left 10px
          }

        }
      }

      .comment-input {
        .emoji-mart-emoji {
          vertical-align middle
        }

        & > div {
          position relative
        }
        background-color bgLight
        border-radius 20px
        color commonTextLight
        padding 8px 12px
        padding-right 100px
        font-size 1.4rem
        width 100%
        position relative
        cursor text
        //overflow-y auto

        .create-post-mention {
          color lightMentionText
          background-color lightMentionBg
          padding 1px 0

          &:hover {
            color lightMentionText !important
            background-color lightMentionBg !important
          }

          &:focus {
            color lightMentionText !important
            background-color lightMentionBg !important
          }

        }

      }

      .comment-input-entry {
        cursor pointer
        padding 8px

        &:hover {
          background-color darken(white, 3%)
        }

        .content-wrapper {
          display flex
          align-items center

          .common-avatar {
            width 34px
            height 34px

            .avatar-holder {
              span {
                font-size 1.4rem
              }
            }
          }

          .user-info {
            flex-grow 1
            padding-left 10px

            .username {
              font-weight 500
              color commonTextLight
              font-size 1.4rem
              line-height 100%
              textOverflowEllipsis()
            }

            .nickname {
              line-height 100%
              margin-top 3px
              font-size 1.2rem
              color commonTextLight
              textOverflowEllipsis()
            }
          }
        }
      }
    }
  }
}