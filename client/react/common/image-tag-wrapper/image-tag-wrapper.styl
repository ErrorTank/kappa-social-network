.image-tag-wrapper {
  position relative
  & > .loading-inline{
    z-index 101
    background-color rgba(black, 0.8)

  }
  .detection-loader{
    font-size 4rem !important
    color primaryButton !important


  }
  .dl-text{
    position absolute
    top 62%
    left 50%
    z-index 102
    font-size 1.8rem
    text-align center
    font-weight 500
    color white
    transform translate(-50%, -50%)
  }
  img {
    width 100%
    height 100%
  }

  .tag-box-overlay {
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    background-color transparent
    z-index 1

    .tag-box-container {
      width 100%
      height 100%
      position relative
      .detection{
        position absolute
        border 2px solid red
      }
      .tag-box {
        position absolute
        cursor pointer
        border 2px solid white
        background-color transparent
        box-shadow: 0px 0px 3px #1C1C1C

      }
    }
  }

  .tag-overlay {
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    z-index 3

    .tags-container {
      width 100%
      height 100%
      position relative
      .tag-label{
        position absolute
        &:hover{
          z-index 50 !important
        }
        .label-container{
          position relative
          .label{
            background-color white
            border-radius 5px
            font-size 1.5rem
            font-weight 500
            position absolute

            left 50%
            transform translateX(-50%)
            padding 8px
            box-shadow: 0px 1px 2px #A6A6A6;
            padding-right 30px

            i{
              position absolute
              right 8px
              top 50%
              transform translateY(-50%)
              font-size 1.8rem
              cursor pointer
            }
          }
          .arrow{
            position absolute
            width 15px
            height 15px

            left 50%

            transform rotateZ(45deg) translateX(-50%)
            background-color white
          }
        }
      }
      .tag-select {
        position absolute
        z-index 100
        .select-wrapper {
          position relative

          .select-container {
            position absolute
            top 0
            left 50%
            transform translateX(-50%)
            border-radius 5px
            background-color white
            padding 5px
            box-shadow:0px 0px 3px #DBDBDB
            width 200px
            .tag-select-input{
              margin-bottom 0 !important
            }
            .results{
              margin-top 2px
              position relative
              min-height 60px
              max-height 150px
              overflow auto
              .item{
                padding 8px
                display flex
                align-items center
                cursor pointer
                &:not(.active):hover{
                  background-color darken(white, 3%)
                }
                &.active{
                  background-color rgba(primaryButton, 0.1)
                }
                .avatar-wrapper{
                  flex 0 0 30px

                  .common-avatar{
                    width 25px
                    height 25px
                    .avatar-holder{
                      span{
                        font-size 1.1rem !important
                      }
                    }
                  }
                }
                .username{
                  flex 0 0 calc(100% - 30px)
                  font-size 1.4rem
                  font-weight 500
                }
              }
            }
          }
        }
      }
    }
  }
}