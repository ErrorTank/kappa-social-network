.shift-overview{
  position relative
  min-height 200px
  margin-top 30px
  .shifts{
    display flex
    flex-wrap wrap
    .shift-title{
      flex 0 0 100%
      color inverse
      font-size 1.6rem
      font-weight 500
      margin-bottom 15px !important

    }
    .shift{
      flex 0 0 20%
      & > div{
        text-align center
        font-size 1.4rem
        padding 6px 0
      }
      &:nth-of-type(1){
        .value{
          border-left 1px solid #cccccc
        }

      }
      &:nth-of-type(6){
        .value{
          border-left 1px solid #cccccc
        }

      }
      .label{
        color white
        background-color inverse
      }
      .value{
        color info
        border-bottom 1px solid #cccccc
        border-right 1px solid #cccccc
        font-weight 500

      }
    }
  }
}