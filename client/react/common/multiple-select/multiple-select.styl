.multiple-select{

  position relative
  &.darkMode{
    .search-result{
      background-color darkNav
      box-shadow  0 2px 9px 0 rgba(255, 255, 255, 0.05)


      color commonTextDark





      &::-webkit-scrollbar-thumb {
        background: common-border-dark;
      }

      /* Handle on hover */

      &::-webkit-scrollbar-thumb:hover {
        background: darken(common-border-dark, 5%)
      }
      .result-item{

        &.picked{
          background-color lighten(darkNav, 10%)

        }
        &:not(.picked):hover{
          background-color lighten(darkNav, 10%)
        }
      }
      .result-summary{


        .value{
          color primaryButton

        }
      }
    }
    .empty-notify{

      color commonTextDark
    }
    .tags-container{
      border-color common-border-dark
      .tag{
        background-color lighten(darkNav, 10%)

        &:hover{
          background-color lighten(darkNav, 20%)

        }
        color primaryButton

      }
      .rest-input{
        color commonTextDark

      }
      .content{
        color commonTextDark

        i{

          background-color: common-border-dark;

        }

      }


    }
  }
  .empty-notify{
    padding 6px 15px
    font-size 1.4rem
    color commonTextLight
  }
  .tags-container{
    padding 6px 15px
    border 1px solid common-border
    border-radius 4px
    cursor text
    font-size 1.4rem
    line-height 30px
    word-break keep-all
    white-space pre-wrap
    vertical-align middle
    .tag{
      margin-right 6px
      background-color lightPrimary
      border-radius 4px
      font-weight 500
      white-space nowrap
      font-size 1.3rem
      &:hover{
        background-color darken(lightPrimary, 10%)

      }
      padding 5px 8px
      color primaryButton
      i{
        cursor pointer
        margin-left 10px
      }
    }
    .content{
      color commonTextLight
      display inline
      word-break break-word
      white-space pre-wrap
      i{
        position: absolute;
        width: 1px;
        height: 80%;
        background-color: common-border;
        left: 5px;
        top: 10%;
        animation-name: blink;
        animation-duration: 800ms;
        animation-iteration-count: infinite;
        opacity: 1;
      }

    }

    .rest-input{
      outline none
      border none
      min-width 50px
      display inline-block
      word-break break-word
      white-space pre-wrap

    }
  }
  .search-result{
    position absolute
    z-index 2
    background-color white
    top calc(100% + 10px)
    left 0
    width 100%
    border-radius 4px
    box-shadow 0px 0px 15px 1px rgba(69, 65, 78, 0.2)

    overflow-y auto

    color commonTextLight
    .results{
      position relative
      height 200px
      .loading-inline{
        i{
          font-size 2.2rem
        }
      }
    }
    &::-webkit-scrollbar {
      width: 7px;
    }

    /* Track */

    &::-webkit-scrollbar-track {
      box-shadow: inset 0 0 5px transparent;
    }

    /* Handle */

    &::-webkit-scrollbar-thumb {
      background: common-border;
      border-radius 5px
    }

    /* Handle on hover */

    &::-webkit-scrollbar-thumb:hover {
      background: darken(common-border, 5%)
    }
    .result-item{
      font-size 1.4rem
      padding 6px 15px
      cursor pointer
      margin-bottom 3px
      &.picked{
        background-color lightPrimary
      }
      &:not(.picked):hover{
        background-color darken(white, 5%)
      }
    }
    .result-summary{
      padding 6px 15px
      margin-bottom 3px
      font-size 1.4rem

      .value{
        color primaryButton
        font-weight 500
        margin-right 5px
        font-size 1.5rem
      }
    }
  }
}
@keyframes blink {
  from { opacity: 1; }
  to { opacity: 0; }
}