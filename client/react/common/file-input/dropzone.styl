

.drop-zone-wrapper {

  &:not(.disabled) {
    border 2px dashed common-border
    background transparent

    &.active-drag {
      border-color primaryButton


      .drop-area-overlay {
        opacity 1
      }
    }


    & > .loading-inline {
      i{
        font-size 2.5rem
      }
    }

    img {
      max-width 100%
      max-height 100%
    }

    .drop-area-overlay {
      cursor pointer
      width 100%
      height 100%
      background transparent

    }
  }

}
