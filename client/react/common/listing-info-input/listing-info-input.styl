.listing-info-input{
  padding: 16px 16px 0px 16px;
  box-sizing: border-box;
  &.focus{
    .listing-info-wrapper{
      border-color: blueTextLight;
    }
  }
  .listing-info-wrapper{
    cursor text
    border-radius: 6px;
    position relative;
    border: 1px solid lightgray;
    width 100%;
    height 58px;
    margin: 0;
    overflow: hidden;
    z-index: 0;
    // &:hover{
    //   border-color: gray;
    // }
    .listing-info-label{
      position: absolute;
      left: 16px;
      font-size: 16px;
      white-space: nowrap;
      line-height: 20px;
      top: 18px;
      max-width 100%;
      right: 8px;

    }
    
    .form-control{
      font-size: 16px;
      box-sizing: border-box;
      padding: 26px 16px 10px 16px;
      width: 100%;
      border: none;
      line-height: 20px;

       &:focus{
        & ~ span{
          color blueTextLight;
          transition-property: transform;
          transition-duration: 200ms;
          transform: scale(.75) translateY(-11px);
          transform-origin: top left;  
        }
      }
    }
    input{
      height 56px;
    }
    textarea{
      height 200px;
    }
  }
  .textArea{
    height 200px;
  }
}
