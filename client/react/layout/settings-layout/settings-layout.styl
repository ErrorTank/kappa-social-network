.settings-layout {
  .settings-layout-wrapper {
    padding 20px 0

    .settings-left-panel
    .settings-right-panel {
      display inline-block
      vertical-align top
    }

    .settings-left-panel {
      width 40%
      padding-right 15px

      .settings-menu {
        padding 16px 0
        .sm-title{
          margin-bottom 10px
          font-size 2rem
          font-weight bold
          padding 0 16px
        }
        .sm-body{
          .sm-item{
            padding 16px
            font-size 1.4rem
            color commonTextLight
            cursor pointer
            position relative
            span{
              margin-left 5px
              font-weight 500
            }
            .sub-icon{
              position absolute
              top 50%
              transform translateY(-50%)
              right 12px
            }
            &:not(.active):hover{
              background-color darken(white, 3%)
            }
            &.active{
              background-color primaryButton
              color white
            }
            i{
              font-size 1.8rem

            }
          }
        }
      }
    }

    .settings-right-panel {
      width 60%
    }
  }
}