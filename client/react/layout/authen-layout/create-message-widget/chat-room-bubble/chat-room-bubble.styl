.chat-room-bubble{
  width 100%
  height 100%
  position: relative;
  line-height 0
  cursor pointer
  .chat-box-toggle{
    position absolute
    width 20px
    height 20px
    top -5px
    right -5px
    border-radius 50%
    background-color white
    & > div{
      position relative
      width 100%
      height 100%
      i{
        absoluteMiddle()
        font-size 18px !important
        color commonTextLight
      }
    }
  }
}