.chat-room-bubble{
  width 100%
  height 100%
  position: relative;
  line-height 0
  cursor pointer
  .unseen-count{
    position absolute
    width 20px
    height 20px
    bottom -2px
    left -2px
    display flex
    border-radius 50%
    z-index: 1;
    justify-content center
    align-items center
    background-color danger
    span{
      font-size 1.3rem
      color white
    }
  }
  .status-avatar{
    width 50px
    height 50px
    .common-avatar{
      width 50px
      height 50px
      .avatar-holder{
        span{
          font-size 1.7rem
        }
      }
    }
  }
  .chat-box-toggle{
    position absolute
    width 20px
    height 20px
    top -5px
    right -5px
    border-radius 50%
    background-color white
    z-index 1
    & > div{
      position relative
      width 100%
      height 100%
      i{
        absoluteMiddle()
        font-size 18px !important
        color commonTextLight
      }
    }
  }
}