

.create-message-widget{
  z-index 3
  .cmw-round-stack{
    box-shadow 0px 0px 15px 1px rgba(69, 65, 78, 0.2)
    border-radius 50%
    width 50px
    height 50px
    &.bubble-chat-wrapper{
      margin-bottom 12px
    }
    .tooltip-container{
      vertical-align bottom
    }
  }
  &.darkMode{
    .cmw-toggle {
      background-color lightGrey

      &:hover{
        background-color lighten(lightGrey, 15%)
      }
      i{
        color commonTextDark
      }

    }
  }
  .round{
    position relative
    width 50px
    height 50px
    border-radius 50%
    cursor pointer


  }
  .cmw-toggle{
    transition background-color 0.1s ease
    background-color white


    i{
      absoluteMiddle()
      font-size 25px
      color commonTextLight
    }
    &:hover{
      background-color darken(white, 3%)
    }

  }

}