.file-display{
  display inline-block
  position relative
  height 50px
  background-color bgLight
  .loading-inline{
    i{
      fons-size 2.2rem
    }
  }
  .file-info{
    width 50px
    .img-wrapper{
      width 50px
      height 50px
      position relative
      overflow hidden
      img{
        max-height 50px
        max-width 50px
        absoluteMiddle()
      }
    }
  }
  margin-right 15px
  border-radius 5px
  &.common-file{
    .file-info{
      max-width 180px
      min-width 50px

    }

  }
  .close-icon{
    position absolute
    z-index 1
    top -6px
    right -6px
    width 22px
    height  22px
    border-radius 50%
    background-color white
    cursor: pointer;
    display flex
    justify-content center
    align-items center
    border 1px solid common-border
    &:hover{
      background-color darken(white, 5%)
    }
    i{
      font-size 1.8rem
      color commonTextLight
    }
  }
}