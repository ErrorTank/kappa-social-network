.message-utilities{
  padding 8px
  position relative
  .actions-container{
    display flex
    justify-content space-between
    align-items flex-end
    .chat-input-wrapper{
      width 190px
    }
    .icon-wrapper{
      position relative
      width 35px
      height 35px
      transition background-color 0.1s ease
      border-radius 50%
      cursor pointer
      i{
        absoluteMiddle()
        font-size 1.9rem !important
        color primaryButton
      }
      &:hover{
        background-color darken(white, 7%)
      }
    }
  }
}