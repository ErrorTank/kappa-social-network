.emoji-picker {
  position absolute
  left 50%
  transform translateX(-50%)
  bottom 45px

  .emoji-mart {
    width auto !important
  }
}

.chat-input {
  width 100%
  position relative
  border-radius 20px
  background-color bgLight
  padding 6px 12px
  font-size 1.4rem
  .chat-input-mention-popover{
    overflow: hidden;
    border-radius: 5px;
    position: absolute;
    top: -100%;
    width: 100%;
    left: 0;
    background-color white
    box-shadow 0 5px 6px #D1D1D1
    .chat-input-entry{
      cursor pointer
      padding 8px
      &:hover{
        background-color darken(white, 3%)
      }
    }
  }
  .chat-input-mention{
    color lightMentionText
    background-color lightMentionBg
    padding 1px 0
    &:hover{
      color lightMentionText !important
      background-color lightMentionBg !important
    }
    &:focus{
      color lightMentionText !important
      background-color lightMentionBg !important
    }

  }
  .emoji-mart-emoji {
    font-size inherit
  }
  padding-right 45px

  .emoji-select {
    position absolute
    right 0
    bottom 0
    height 34px
    width 34px
    line-height 3
    text-align center
    border-radius 50%
    cursor pointer
    transition background-color 0.1s ease

    i {
      font-size 2.2rem
      color lightIcon
    }

    &:hover {
      background-color darken(bgLight, 5%)
    }
  }
}