.emoji-picker {
  position absolute
  left 50%
  transform translateX(-50%)
  bottom 45px
  z-index 3

  .emoji-mart {
    width auto !important
  }
}

.chat-input {
  width 100%
  position relative
  border-radius 20px
  background-color bgLight
  padding 6px 12px
  font-size 1.4rem
  .chat-input-mention-popover{
    overflow: hidden;
    border-radius: 5px;
    position: absolute;
    bottom: 100%;
    width: 100%;
    left: 0;
    background-color white
    box-shadow 0 5px 6px #D1D1D1
    max-height 200px
    overflow-y auto
    .chat-input-entry{
      cursor pointer
      padding 8px
      &:hover{
        background-color darken(white, 3%)
      }
      .content-wrapper{
        display flex
        align-items center
        .common-avatar{
          width 34px
          height 34px
          .avatar-holder{
            span{
              font-size 1.4rem
            }
          }
        }
        .user-info{
          flex-grow 1
          padding-left 10px
          .username{
            font-weight 500
            color commonTextLight
            font-size 1.4rem
            line-height 100%
            textOverflowEllipsis()
          }
          .nickname{
            line-height 100%
            margin-top 3px
            font-size 1.2rem
            color commonTextLight
            textOverflowEllipsis()
          }
        }
      }
    }
  }
  .chat-input-mention{
    color lightMentionText
    background-color lightMentionBg
    padding 1px 0
    &:hover{
      color lightMentionText !important
      background-color lightMentionBg !important
    }
    &:focus{
      color lightMentionText !important
      background-color lightMentionBg !important
    }

  }
  .emoji-mart-emoji {
    font-size inherit
  }
  padding-right 32px

  .emoji-select {
    position absolute
    right 0
    bottom 0
    height 34px
    width 34px
    line-height 3
    text-align center
    border-radius 50%
    cursor pointer
    transition background-color 0.1s ease

    i {
      font-size 2.2rem
      color lightIcon
    }

    &:hover {
      background-color darken(bgLight, 5%)
    }
  }
}