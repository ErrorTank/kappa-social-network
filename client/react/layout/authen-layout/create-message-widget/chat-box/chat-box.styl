.chat-box-body{
  display flex
  flex-direction column
  height 406px
  position relative

  & > div{
    flex-grow 1
  }
}
.chat-box-header{
  padding 4px !important
  box-shadow:0px 2px 5px #D4D4D4
  .main-wrapper{
    display flex
    align-items center
    flex 0 0 100%
  }
  .toggle-minimize{
    padding-top 10px
    text-align right
    flex 0 0 100%
    .btn-back{
      background-color success
      color white
      padding 6px 10px
      margin-left 8px
      cursor pointer
      &:hover{
        background-color darken(success, 10%)
      }
    }
    .btn-cancel{
      background-color danger
      color white
      margin-left 8px
      padding 6px 10px
      cursor pointer
      &:hover{
        background-color darken(danger, 10%)
      }
    }
  }
  .loading-wrapper{
    display flex
    align-items center
  }
  .actions{
    .small-icon{
      i{
        font-size 1.7rem !important
      }
      &.minimize{
        i{
          top 28% !important
        }
      }
    }
  }
}