.message-file-display{
  cursor pointer
  .img-wrapper{
    background-color black
    border-radius 5px
    overflow hidden

    img{

      max-height 250px
      max-width 100%

    }
  }
  .file-wrapper{
    padding 4px 8px
    height 60px
    width 180px
    display flex
    align-items center
    background-color btnCancelLight
    justify-content center
    .icon-wrapper{
      height  33px
      flex 0 0 33px
      vertical-align middle
      background-color white
      border-radius 50%
      position relative
      i{
        color commonTextLight
        font-size 2rem
        absoluteMiddle()
      }

    }
    .filename{
      color commonTextLight
      white-space pre-wrap
      overflow hidden
      text-overflow ellipsis
      padding-left 8px
      font-size 1.4rem
      text-align left
      font-weight 500
      flex 0 0 calc(100% - 33px)

    }
  }
}