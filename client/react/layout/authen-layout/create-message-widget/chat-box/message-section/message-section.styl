.message-tooltip{
  .tooltip-content{
      opacity 0.6
  }
}
.message-section {
  flex-basis: 355px;
  overflow-y auto
  overflow-x hidden
  .loading-wrapper {
    position relative
    height 50px

    &.expand {
      height 100%

      .loading-inline {
        i {
          font-size 3rem

        }
      }
    }

    .loading-inline {
      i {
        font-size 2.2rem

      }
    }

  }
}

.chat-message {
  position relative
  &.head {
    margin-top 10px
    .message-renderable-content{
      border-radius 18px 18px 18px 4px

      &.owned {
        border-radius 18px 18px 4px 18px
      }
    }

  }

  &.tail {
    margin-top 2px
    margin-bottom 10px
    .message-renderable-content{
      border-radius 4px 18px 18px 18px

      &.owned {
        border-radius 18px 4px 18px 18px
      }
    }

  }

  &.middle {
    margin-top 2px
    .message-renderable-content{
      border-radius 4px 18px 18px 4px

      &.owned {
        border-radius 18px 4px 4px 18px
      }
    }

  }

  &.single {
    margin 10px 0
    .message-renderable-content{
      border-radius 18px


    }
  }
  &.owned {
    .message-action {
      width 78px !important

    }
    text-align right

    .upper-panel {
      justify-content flex-end
    }
  }

  .upper-panel {
    display flex
    justify-content flex-start

    &:hover {
      .message-action {
        opacity 1

      }
    }

    .avatar{
      width 44px
      text-align center
      align-self center
      .status-avatar{
        width 30px
        height 30px
        .active-status{
          width 10px
          height 10px
        }
        .common-avatar{
          width 30px
          height 30px
          .avatar-holder{
            span{
              font-size 1.3rem
            }
          }
        }
      }

    }

    .message-action {
      width 56px
      align-self center
      opacity 0

      .message-action-wrapper {
        width 100%
        display flex
        align-items center
        justify-content space-around

        .action {
          width 22px
          height 22px
          border-radius 50%

          i {
            absoluteMiddle()
            font-size 1.6rem
          }
          position relative
          background-color transparent
          transition background-color 0.1s ease
          cursor pointer

          &:hover {
            background-color btnCancelLight
          }
        }
      }
    }

    .message-state {
      align-self flex-end
      width 22px
      .msg-state{
        width 14px
        height 14px
        display block
        margin auto
        border-radius 50%
        border 1px solid common-border
        position relative
        background-color transparent
        i{
          font-size 0.8rem
          font-weight 500
          absoluteMiddle()
          color common-border
        }
        &.full-fill{
          background-color common-border
          i{
            color white
          }
        }
      }
    }

    .message-renderable-content {
      background-color btnCancelLight
      padding 8px 12px
      word-break  break-word
      vertical-align bottom
      margin-right 5px
      margin-left 0
      color commonTextLight
      font-size 1.5rem
      font-weight 400
      display inline-block
      max-width calc(100% - 56px - 5px - 10px - 44px)
      text-align left
      white-space pre-wrap

      .message-link {
        color inherit !important
        font-weight 450

        &:hover {
          text-decoration underline !important
        }
      }

      &.owned {
        background-color primaryButton
        color white !important
        margin-right 0
        margin-left 5px
        max-width calc(100% - 22px - 78px - 5px - 10px)
      }


    }
  }

}