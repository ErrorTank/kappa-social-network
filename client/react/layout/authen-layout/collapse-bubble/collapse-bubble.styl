.collapse-bubble {
  position relative

  .collapse-count {
    position absolute
    width 50px
    height 50px
    background-color rgba(black, 0.6)
    display flex
    justify-content center
    align-items center
    border-radius 50%
    z-index 1

    span {
      color white
      font-size 1.5rem
    }
  }

  .common-avatar {
    width 50px
    height 50px
  }
}

.collapse-bubbles-tooltip {
  .tooltip-content {
    background-color white !important
    padding 8px !important
    border-radius 5px
    width 200px !important
    box-shadow 0px 0px 15px 1px rgba(69, 65, 78, 0.2)
  }

  .item {
    padding 5px 8px
    transition background-color 0.1s ease
    color commonTextLight
    text-align left
    cursor pointer
    font-size 1.4rem
    font-weight 500
    padding-right 25px
    position relative

    &:hover{
      background-color darken(white, 3%)
    }

  }


  .icon-wrapper {
    position absolute

    top 50%
    transform translateY(-50%)
    right 8px
    width 25px
    height 25px
    border-radius 50%
    display flex
    justify-content center
    align-items center
    &:hover{
      background-color darken(white, 10%)
    }
    i {

      font-size 2rem


      color commonTextLight

    }
  }
}
