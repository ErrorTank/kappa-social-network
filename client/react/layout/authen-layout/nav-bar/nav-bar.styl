.nav-bar{
  position fixed
  box-shadow 0 0 11px rgba(0,0,0,.13)
  width 100%
  //height 6rem
  z-index 6
  top 0
  left 0
  .nav-bar__main{
    background-color white
    padding 1rem 3rem
    display inline-block
    width calc(100% - 24rem)

    height 100%
    .nav-bar__main--wrapper{
      display flex
      height 100%
    }
  }
  & > .nav-bar__logo{
    height 100%
    width 24rem
    background-color purple2
    padding 1rem
    vertical-align top
    display inline-block

    a{
      display flex
      align-items center
      padding 0 10px
      & .img-wrapper{
        position relative
        width 4rem
        height 4rem
        border-radius 30%
        overflow hidden
        & > img{
          absoluteMiddle()
          width 4rem
          height 4rem

        }
      }
      span{
        margin 0 1rem
        height 2rem
        width 3px
        background-color orange2
      }
      p{
        font-size 2rem
        font-weight 400
        color sperm
      }
    }

  }
}