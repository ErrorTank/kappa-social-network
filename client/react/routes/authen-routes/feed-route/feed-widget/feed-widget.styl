.feed-widget{
  padding 0 15px
}

.post-creation-box{
  display flex
  align-items center
  padding 12px 15px
  .avatar-wrapper{
    flex  0 0 40px

  }
  .placeholder{
    flex 0 0 calc(100% - 50px)
    margin-left 10px
    padding 8px 12px
    background-color bgLight
    border-radius 20px
    font-size 1.6rem
    cursor pointer
    &:hover{
      background-color darken(bgLight, 5%)
    }
    color greyTextLight
  }
}
.white-box{
  border-radius 5px
  background-color white

  color commonTextLight
  box-shadow:0px 1px 2px #C4C4C4
}