.content-collapse{
  &.darkMode {
    .more-toggle {
      color commonTextDark

      background-color btnCancelDark
      &:hover {
          background-color lighten(btnCancelDark, 10%)
      }
    }
  }

  .more-toggle {
    margin-top 10px
    padding 8px
    display flex
    justify-content center
    align-items center
    font-size 1.5rem
    font-weight 500
    color commonTextLight
    border-radius 5px
    background-color btnCancelLight
    cursor pointer
    transition background-color 0.1s ease

    &:hover {
      background-color darken(btnCancelLight, 3%)
    }

    i {
      font-size 2.4rem !important
      margin-left 6px
    }
  }
}

.navigation-widget {
  height 100%
  padding 0 8px
  padding-top 16px
  overflow-y auto

  &.darkMode {
    .navigation-widget-row {


      &:hover {
        background-color lighten(bgDark, 10%)
      }



      .right-side {

        color commonTextDark

      }
    }
    &::-webkit-scrollbar-thumb {
      background: lighten(black, 30%);
    }

    /* Handle on hover */

    &::-webkit-scrollbar-thumb:hover {
      background: lighten(black, 35%);
    }
  }

  &::-webkit-scrollbar {
    width: 7px;
  }

  /* Track */

  &::-webkit-scrollbar-track {
    box-shadow: inset 0 0 5px transparent;
  }

  /* Handle */

  &::-webkit-scrollbar-thumb {
    background: common-border;
    border-radius 5px
  }

  /* Handle on hover */

  &::-webkit-scrollbar-thumb:hover {
    background: darken(common-border, 5%)
  }

  .navigation-widget-row {
    padding 12px 8px
    display flex
    align-items center
    border-radius 5px
    background-color transparent
    transition background-color 0.1s ease
    cursor pointer


    &.shop {
      i {
        color primaryButton
      }
    }

    &.page {
      i {
        color orangered
      }
    }

    &.group {
      i {
        color #07ad87
      }
    }

    &.watch {
      i {
        color #c2bc08
      }
    }

    &.dating {
      i {
        color danger
      }
    }

    &:hover {
      background-color darken(bgLight, 3%)
    }

    .left-side {
      flex 0 0 17%

      i {
        font-size 3rem
      }
    }

    .right-side {
      flex 0 0 83%
      color commonTextLight
      font-size 1.5rem
      font-weight 500
    }
  }

}