.box-widget{
  padding 16px
  .bw-navigators{
    display flex
    align-items center
    .navigator {
      text-decoration none
      padding-top 3px
      border-bottom 3px solid transparent
      .navigator-label{
        padding 12px 16px
        font-size 1.5rem
        font-weight 500
        cursor pointer
        transition all 0.1s ease
        color greyTextLight

        border-radius 5px
        .sub{
          font-size 1.4rem
          font-weight 400
        }
      }
      &:not(.active):hover {
        .navigator-label{
          background-color darken(white, 5%)
        }
      }


      &.active {
        border-bottom-color: primaryButton;
        .navigator-label{
          color primaryButton
          border-radius 0 !important

        }

      }
    }
  }
  .box-widget-header{
    display: flex;
    justify-content flex-end
    align-items center

    .bw-route-name{
      margin-right auto
      align-self flex-start
      font-size 2rem
      font-weight bold
      color commonTextLight
    }

    .bw-btn{
      cursor pointer
      border-radius 5px
      background-color white
      text-align center
      padding 10px 12px
      font-size 1.5rem
      font-weight 500
      color primaryButton
      &:hover{
        background-color darken(white, 5%)
      }
    }
  }
}