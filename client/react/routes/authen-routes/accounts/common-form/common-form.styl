.common-form{
  min-width 500px
  max-width 800px
  padding 50px 0
  position relative
  min-height 200px
  margin auto

  .form-row{
    .form-label{
      font-size 1.6rem
      color inverse
      font-weight 500
      margin-bottom 6px
    }
    margin-top 8px
    .form-error{
      font-size 1.3rem
      color danger
    }
    .MuiFormControl-root{
      width 100% !important
      .MuiInputBase-root{
        font-size 16px !important
      }

    }
    display flex
    padding 0 5px
    justify-content space-between
    .account-basic-input{
      flex 0 0 48%
    }
    .info-cell{
      flex 0 0 48%
      font-size 1.6rem
      .label{
        color inverse
        font-weight 500
      }
      .value{
        margin-left 6px
        font-weight 500
        color info
      }
    }
  }
  .form-title{
    margin-bottom 30px
    font-size 20px
    font-weight 500
    color sectionTitle
    display inline-block
    padding-right 100px
    padding-bottom 5px
    border-bottom 3px solid info
  }
  .loading-inline{
    i{
      font-size 30px
    }
  }
}