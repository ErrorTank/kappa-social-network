.dating-card-profile{
    position: relative;
    height: 80vh;
    min-width: 380px;
    max-width: 380px;
    margin-top: 1vh;
    border-radius: 5%
    overflow-y : auto //croll
    border : 1px solid black
    background-color: grayBackgroundLight
    .dcp-top{
        height : 80%
        background-color: #fff;
        cursor: pointer;
        position relative
        &>img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 5%
        }
        .avatar-navigator {
            position: absolute;
            top: 5px;
            display: flex;
            padding: 0 6px;
            align-items: center;
            justify-content: space-between;
            width: 100%;

            .navigator-box {
                flex-grow: 1;
                padding: 6px 2px;

                &.active {
                    .card-box {
                        background: white;
                        opacity: 1;
                    }
                }
                .card-box {
                    opacity: 0.2;
                    background-color: black;
                    border-radius: 5px;
                    height: 5px;
                    cursor: pointer;
                }
            }
        }

        &:hover {
            .swipe-right, .swipe-left {
                opacity: 1;
            }
        }

        .swipe-right, .swipe-left {
            position: absolute;
            top: 50%;
            color: white;
            font-weight: bold;
            font-size: 3rem;
            cursor: pointer;
            transition: opacity 0.2s ease;
            opacity: 0;
        }

        .swipe-left {
            left: 15px;
        }

        .swipe-right {
            right: 15px;
            }
    }
   
    .dcp-info{
        margin-top : 5px
        
    }
}