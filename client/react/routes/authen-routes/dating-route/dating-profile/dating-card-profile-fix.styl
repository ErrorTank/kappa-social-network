.dating-card-profile-fix{
    position: relative;
    height: 80vh;
    min-width: 380px;
    max-width: 380px;
    margin-top: 1vh;
    border-radius: 2%
    overflow-y : auto //croll
    border : 1px solid black
    background-color: bgLight
    // .picture-input-wrapper{
    //     width 320px
    //     display: flex
    //     justify-content: center
    //     margin: 0 auto
    .picture-input {
    padding: 0 16px;

    .picture-input-header {
      font-weight: 600;
      line-height: 16px;
      font-size: 13px;

      .sub {
        font-weight: normal;
      }
    }

    // display picture
    .images-display {
      margin-top: 8px;

      .images-container {
        display: flex;
        justify-content: flex-start;
        flex-wrap: wrap;
        align-content: flex-start;

        .file-display {
          max-width: 110px;
          max-height: 110px;
          box-sizing: border-box;
          padding: 5px;
          position: static;
          border-radius: 5px;
          height: 110px;
          width: 110px;
          background-color: white;
          margin-right: 0;
          position: relative;

          .file-info {
            width: 100%;
            height: 100%;

            .img-wrapper {
              width: 105px;
              height: 105px;

              img {
                height: 105px;
                width: 105px;
                max-width: 100%;
                max-height: 100%;
                object-fit: cover;
                cursor: pointer;
                border-radius: 4px;
              }
            }
          }
        }

        .add-file {
          cursor: pointer;
          margin: 5px;
          width: 105px;
          height: 105px;
          background-color: grayBackgroundLight;
          border-radius: 4px;
          box-sizing: border-box;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;

          i {
            font-size: 16px;
          }

          span {
            font-size: 13px;
            font-weight: 400;
            margin: 2px;
          }
        }
      }
    }

    // empty
    .add-picture-section {
      margin-top: 8px;
      cursor: pointer;
      height: 160px;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 4px;
      border: 1px solid lightgray;

      &.invalid {
        border-color: #d9534f;
      }

      .add-picture-button {
        cursor: pointer;
        border-radius: 6px;
        padding: 0 12px;
        background-color: secondaryBtnLight;
        height: 36px;
        display: flex;
        align-items: center;
        color: normalTextLight;

        i {
          margin: 0 3px;
          font-size: 16px;
        }

        span {
          font-size: 15px;
          font-weight: 600;
          margin: 0 3px;
        }

        &:hover {
          background-color: darken(secondaryBtnLight, 10%);
        }
      }
    }
  }

    .dcpf-button{
        margin : 10px auto;
        display: flex
        justify-content: center
        bottom : 0;
        left : 40%
        font-size : 16px
        font-weight: 500
        color:white
        background-color: blueTextLight
        height :30px;
        width : 50px
        border-radius: 10px;
        cursor pointer
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
    }
}
.dating-card-profile-fix::-webkit-scrollbar {
    display: none;
}
.dating-card-profile-fix {
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;  /* Firefox */
}