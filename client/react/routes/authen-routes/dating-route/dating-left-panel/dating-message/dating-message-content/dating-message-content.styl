.dating-message-container {
   flex-grow: 1;
   flex-basis: 550px;
   overflow-y: auto;
   .dm-content-wrapper{
      display flex
      align-items: center
      padding : 6px
      .dm-avatar{
         margin: 0 5px
         width: 30px;
         height: 30px;
         overflow: hidden;
         border-radius: 50%;
         > img {
               width: 100%;
               height: 100%;
               object-fit: cover;
            }
      }
      .dm-content {
         border-radius: 20px;
         background-color : btnCancelLight
         font-size: 1.5rem;
         font-weight: 400;
         text-align: left;
         white-space: pre-wrap;
         padding: 8px 12px;
         word-break: break-word;
         vertical-align: bottom;
      }
      &.dm-user{ 
         justify-content: flex-end
         .dm-content{
            background-color: blueTextLight
            color : white
         }
      }
   }
  
}
   
.dating-message-loading {
   position: relative;
   height: 100%;
}