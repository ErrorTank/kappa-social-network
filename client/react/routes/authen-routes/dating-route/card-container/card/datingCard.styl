.dating-card {
    display: flex;
    justify-content: center;
    margin-top: 2vh;

    .swipe {
        position: absolute;

        .card {
            position: relative;
            width: 600px;
            padding: 20px;
            max-width: 25vw;
            height: 70vh;
            border-radius: 20px;
            background-size: cover;
            background-position: center;
            box-shadow: 0px 18px 53px rgba(0, 0, 0, 0.3);

            h3 {
                position: absolute;
                color: white;
                bottom: 10px;
            }
        }
    }
}