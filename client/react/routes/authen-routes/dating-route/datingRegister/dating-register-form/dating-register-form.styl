.age-layout {
    margin: 16px 16px 0;
    height : 56px
    border: 1px solid lightgray 
    border-radius: 6px;
    padding: 26px 16px 10px;
    position relative
    .label{
        position absolute
        transition-property: transform;
        transition-duration: 200ms;
        transform: scale(.75) translateY(-11px);
        transform-origin: top left;  
        color: gray;
        font-weight: 400;
        left: 16px;
        font-size: 16px;
        white-space: nowrap;
        line-height: 20px;
        top: 18px;
        max-width 100%;
        right: 8px;
    }
    .value{
        font-size: 16px;
        padding-left: 5px
    }
}