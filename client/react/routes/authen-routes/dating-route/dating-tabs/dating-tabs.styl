.dating-matched {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 20px;
    flex-wrap: wrap;

    .img-matched {
        border-radius: 5px;
        flex: 0 0 32%;
        height: 120px;
        position: relative;
        overflow: hidden;
        transition: all 0.2s ease;
        cursor: pointer;
        margin-bottom: 8px;

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .username {
            position: absolute;
            bottom: 5px;
            left: 5px;
            font-size: 15px;
            font-weight: 1000;
            color: white;
        }

        &:hover {
            transform: scale(1.1);
        }
    }

    .h2 {
    }
}

.dating-message {
    .dating-chat-box {
        padding: 8px;
        border-radius: 5px;
        cursor: pointer;
        display: flex;
        align-items: center;
        background-color: white;

        .dating-chat-avatar {
            flex: 0 0 50px;
            height: 50px;

            .avatar-wrapper {
                width: 100%;
                height: 100%;
                overflow: hidden;
                border-radius: 50%;

                img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
            }
        }

        .dating-wapper-content {
            flex: 0 0 calc(100% -50px);
            padding-left: 10px;

            .dating-chat-name {
                font-size: 16px;
                font-weight: 500;
                color: tinderPink;
            }

            .dating-last-message {
                font-size: 1.4rem;
                color: commonTextLight;
                white-space: nowrap;
            }
        }
    }
}