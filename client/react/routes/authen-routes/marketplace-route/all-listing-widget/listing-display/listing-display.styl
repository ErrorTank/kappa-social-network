.listing-display {
  padding: 4px;
  flex-basis: 20%;
  position: relative;
  margin: 4px;

  &:before {
    content: '';
    display: block;
    padding-top: 100%; /* initial ratio of 1:1 */
  }

  .listing-picture {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;

    img {
      border-radius: 6px;
      height: 80%;
      width: 100%;
      object-fit: cover;
      overflow: hidden;
    }
  }

  .listing-main-info {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    padding: 12px 0;

    .listing-price {
      margin-top: 4px;
      font-size: 17px;
      font-weight: 600;
      color: normalTextLight;
    }
  }
}