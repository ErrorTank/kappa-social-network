.create-listing-preview-widget{
  background-color: white;
  border-radius: 8px;
  max-width: calc(100% - 78px);
  margin: 10px 24px 32px 24px;
  width: 972px;
  box-shadow 0 2px 12px rgba(69, 65, 78, 0.2);
  color: normalTextLight;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  .preview-header-wrapper{
    padding: 10px 16px 0px 10px;
    box-sizing: border-box;
    .preview-header{
      font-size: 15px;
      font-weight: 600;
    }  
  }
  .preview-display-wrapper{
    padding: 12px;
    display: flex;
    height calc(100% - 32px);
    box-sizing: border-box
    .picture-display-section{
      background-color: btnCancelLight;
      flex-basis: 50%;
      flex-grow: 1;
      border-top-left-radius: 8px;
      border-bottom-left-radius: 8px;
      
      .image-empty-placeholder{
        display: flex;
        justify-content: center;
        align-items: center;
        height 100%
        font-size: 24px;
        text-align: center;
        flex-direction: column;
        .ie-placeholder-title{
          margin: 7px 0;
          font-size: 24px;
          font-weight: 700;
          color: secondaryTextLight;
        }
        .ie-placeholder-content{
          color: secondaryTextLight;
          font-size: 20px;
          font-weight: 400
          word-break: break-word;
        }
      }
      
    }
    .listing-info-section{
      flex-basis: 360px;
      width: 100%;
      border-left: 0.5px solid lightgray;
      
      .info-display-wrapper{
        display: flex;
        flex-direction: column;
        .main-info-wrapper{
          padding: 16px;
          padding-bottom: 0;
          .info-title{
            font-size: 24px;
            font-weight: 700;
            line-height: 20px;
          }
          .info-price{
            margin-top: 8px;
            font-size: 17px;
            font-weight: 500;
            line-height: 20px;
          }
          .info-time-position{
            margin: 8px 0 13px 0;
            color: secondaryTextLight;
            font-size: 13px;
            font-weight: 400;
            line-height: 16px;

          }
        }
        .button-section-wrapper{
          margin: 8px 8px 4px 16px
          display: flex;
          .button-display{
            margin-right: 8px;
            height 36px;
            cursor not-allowed;
            padding: 0 16px;
            border-radius: 6px
            background-color: btnCancelLight;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 15px;
            font-weight: 600;
            i{
              font-size: 16px;
              margin: 0 3px;
            }
            span{
              margin: 0 3px;
              max-width 100%;
            }
          }
        }      
      }
    } 

  }
}