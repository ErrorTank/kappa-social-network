.image-slider{
  width: 100%
  height 100%
  .current-slide{
    .img-display{
      .img-wrapper{
        height: 250px;
        max-height 250px
        max-width 500px
      }
    }
  }
  .image-arr{
    max-width calc(100% + 140px);
    height 36px
    padding: 8px 0
    display: flex
    align-items: center
    justify-content: center
    overflow-x hidden
    .img-display{
      height 36px
      width: 36px
      margin: 0 6px
      .img-wrapper{
        height 36px
        width: 36px
        img{
          border-radius: 6px
        }
      }
    }
  }
}