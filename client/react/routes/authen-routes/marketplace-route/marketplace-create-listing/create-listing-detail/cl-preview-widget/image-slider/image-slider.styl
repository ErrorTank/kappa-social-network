.image-slider {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;

  .slider-background {
    position: absolute;
    right: 0;
    top: 0;
    left: 0;
    bottom: 0;
    opacity: 0.7;
    overflow-y: hidden;
    overflow-x: hidden;

    .img-display {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;

      .img-wrapper {
        height: 10%;
        width: 10%;
        transform: scale(11);
        filter: blur(2px);
        -webkit-filter: blur(2px);
      }
    }
  }

  .current-slide {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    max-height: calc(100% - 36px);
    height: calc(100% - 50px);
    z-index: 0;

    .img-display {
      .img-wrapper {
        max-height: 380px;
        max-width: 580px;

        img {
          display: block;
          max-height: 380px;
          max-width: 580px;
        }
      }
    }
  }

  .image-arr {
    max-width: calc(100% + 140px);
    height: 36px;
    padding: 8px 0;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 8px 0;
    z-index: 0;

    .img-display {
      height: 36px;
      width: 36px;
      margin: 0 6px;
      opacity: 0.4;

      &.main {
        opacity: 1;
      }

      &:hover {
        opacity: 1;
        cursor: pointer;
      }

      .img-wrapper {
        height: 36px;
        width: 36px;

        img {
          border-radius: 6px;
        }
      }
    }
  }

  .next-button {
    width: 48px;
    height: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    background-color: white;
    position: absolute;
    top: 50%;
    right: 5%;
    cursor: pointer;

    i {
      font-size: 24px;
      color: secoundaryTextLight;
    }
  }

  .previous-button {
    width: 48px;
    height: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    background-color: white;
    position: absolute;
    top: 50%;
    left: 5%;
    cursor: pointer;

    i {
      font-size: 24px;
      color: secoundaryTextLight;
    }
  }
}