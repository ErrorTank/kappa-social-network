.image-slider{
  width: 100%
  height 100%
  position: relative
  .current-slide{
    width: 100%
    display: flex
    justify-content: center
    align-items: center
    max-height: 100%;
    height calc(100% - 52px)
    .img-display{
      .img-wrapper{
        max-height 250px
        max-width 580px
        img{
          max-height 250px
          max-width 580px
        }
      }
    }
  }
  .image-arr{
    max-width calc(100% + 140px);
    height 36px
    padding: 8px 0
    display: flex
    align-items: center
    justify-content: center
    margin: 8px 0
    .img-display{
      height 36px
      width: 36px
      margin: 0 6px
      .img-wrapper{
        height 36px
        width: 36px
        img{
          border-radius: 6px
        }
      }
    }
  }

  .next-button{
    width: 48px
    height 48px
    display: flex
    justify-content: center
    align-items: center
    border-radius: 50%
    background-color: white
    position: absolute
    top: 50%
    right: 5%
    cursor: pointer
    i{
      font-size: 24px
      color: secoundaryTextLight 
    }
  }
  .previous-button{
    width: 48px
    height 48px
    display: flex
    justify-content: center
    align-items: center
    border-radius: 50%
    background-color: white
    position: absolute
    top: 50%
    left: 5%
    cursor: pointer
    i{
      font-size: 24px
      color: secoundaryTextLight 
    }
  }
}