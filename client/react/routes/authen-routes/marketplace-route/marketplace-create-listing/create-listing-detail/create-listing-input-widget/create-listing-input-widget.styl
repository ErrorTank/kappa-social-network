.create-listing-input-widget{
  background-color white
  height 100vh;
  border-top: 1px solid transparent;
  box-shadow: 0 0 15px 1px rgba(69,65,78,0.2) 
  .cs-input-header{
    margin: 20px 16px 5px 16px;
    box-sizing: border-box;
    flex-shrink: 0;
    flex-wrap: nowrap;
    display: flex;
    justify-content: space-between;
    align-items: center;
    .header-info{
      flex-basis: calc(100% * (2/3));
      flex-shrink: 1;
      max-width: 100%;
      flex-grow: 1;
      .fake-breadcrumb{
        color: secondaryTextLight;
        font-size: 13px;
        text-align: left;
        font-weight: 400;
        line-height: 16px;
      }
      .header-title{
        font-size: 24px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: normalTextLight;
        font-weight: 700;
        line-height: 28px;
      }
    }
    .save-draft-button{
      flex-basis: calc(100% /3);
      display: flex;
      width: 100%
      height 36px;
      box-sizing: border-box;
      justify-content: flex-end;
      align-items: center;
      
      .save-draft-title{
        padding: 7px 12px;   
        border-radius: 6px;
        color: blueTextLight
        cursor pointer
        font-size: 15px;
        line-height: 20px;
        height inherit 
        &:hover{
          background-color: hover;
        }
      }
    }
  }

  .line-seperater{
    border-bottom: 1px solid lightgray;
    margin: 0 16px;
  }
}

.cs-input-body{
  .user-info-display{
    padding: 0 8px;
    .user-avatar-wrapper{
      display: inline-block;
      vertical-align: middle;
      width: 40px;
      height: 40px;
      overflow: hidden;
      border-radius: 50%;
      margin: auto;
      position: relative;
      img{
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-50%);
        height: 41px;
      }
    }
  }
}