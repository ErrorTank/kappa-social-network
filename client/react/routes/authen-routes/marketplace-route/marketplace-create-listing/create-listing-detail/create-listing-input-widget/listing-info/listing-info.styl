.listing-info{
  margin: 5px 0;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  color: secondaryTextLight;
  .picture-input{
    padding: 0 16px;
    .picture-input-header{
      font-weight: 600;
      line-height: 16px;
      font-size: 13px;  
      .sub{
        font-weight: normal;
      }
    }
    .add-picture-section{
      margin-top: 8px;
      cursor: pointer;
      height 160px;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 4px;
      border: 1px solid lightgray;
    }
  }
}