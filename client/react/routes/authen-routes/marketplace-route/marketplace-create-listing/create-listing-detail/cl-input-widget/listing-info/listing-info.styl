.listing-info{
  margin: 5px 0;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  color: secondaryTextLight;
  .picture-input{
    padding: 0 16px;
    .picture-input-header{
      font-weight: 600;
      line-height: 16px;
      font-size: 13px;  
      .sub{
        font-weight: normal;
      }
    }
    //display picture
    .images-display{
      margin-top: 8px
      padding: 4px
      .images-container{
        display: flex
        justify-content: flex-start
        flex-wrap: wrap
        align-content: flex-start
        .file-display{
          max-width 107px
          min-width 107px
          padding: 4px
          position: static;
          border-radius: 4px;
          height: 99px; 
          background-color: white
          margin-right: 0
          position relative
          .file-info{
            width: 100%
            height 100%
            .img-wrapper{
              width: 99px
              height 99px
              img{
                height: 99px
                width: 99px 
                max-width 100%
                max-height: 100% 
                object-fit: cover;
                cursor: pointer
                border-radius: 4px;
              }
            }
          }
        }
        .add-file{
          cursor pointer
          padding: 4px
          width: 99px
          height 99px
          background-color: grayBackgroundLight
        }
      }

    }

    //empty
    .add-picture-section{
      margin-top: 8px;
      cursor: pointer;
      height 160px;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 4px;
      border: 1px solid lightgray;
      .add-picture-button{
        cursor pointer
        border-radius: 6px;
        padding: 0 12px;
        background-color: secondaryBtnLight;
        height 36px
        display: flex;
        align-items: center;
        i{
          margin: 0 3px;
          font-size: 16px;
        }
        span{
          font-size: 15px
          font-weight: 600
          margin: 0 3px;
        }
        &:hover{
          background-color: darken(secondaryBtnLight, 10%)
        }
      }
    }
  }
}