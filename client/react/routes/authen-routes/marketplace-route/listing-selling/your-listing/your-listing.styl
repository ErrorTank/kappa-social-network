.your-listing {
  overflow-y: hidden;
  max-width: 100vw;
  margin-top: 20px;
  width: 800px;
  margin: 0 auto;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;

  .sold-listing-wrapper {
    margin-bottom: 150px;

    .sold-listing-header {
      margin-bottom: 20px;
      display: flex;
      flex-direction: column;
      padding: 16px 16px 4px 16px;

      span {
        font-size: 20px;
        font-weight: 700;
      }
    }

    .sold-listing {
      border-radius: 8px;
      width: 100%;
      margin: 0 20px 20px 0;
      background-color: white;

      .sl-info {
        width: 100%;
        display: flex;
        padding: 16px;
        align-items: center;

        .sl-picture {
          width: 100px;
          height: 100px;

          img {
            border-radius: 6px;
            height: 100%;
            width: 100%;
            object-fit: cover;
          }
        }

        .sl-display-info {
          margin: 0 16px;

          .sl-basic-info {
            margin-bottom: 4px;
            color: normalTextLight;
            line-height: 1.1765;
            font-weight: 600;

            .sl-title {
              font-size: 17px;
            }

            .sl-price {
              font-size: 15px;
            }
          }

          .sl-addition-info {
            font-size: 13px;
          }
        }
      }

      .sl-function {
        display: flex;
        padding: 0 16px 20px;

        .listing-actions {
          // 
          .listing-action-choice {
            display: flex;
            flex-direction: column;
            min-width: 100px;
            border-radius: 8px;
            width: 344px;
            align-items: stretch;
            padding: 8px 0;

            .listing-choice {
              display: flex;
              flex-grow: 1;
              padding: 8px;
              align-items: center;
              gap: 12px;
              border-radius: 8px;
              margin: 0 8px;

              &:hover {
                cursor: pointer;
                background-color: btnCancelLight;
              }

              .lc-icon {
                font-size: 15px;
              }

              .lc-label {
                font-size: 15px;
                font-weight: 500;
              }
            }
          }
        }
      }
    }
  }
}